@page "/"
@rendermode InteractiveServer
<div class="container">
@foreach (var percorso in Percorsi)
{
    <div class="percorso">
        <input type="text" placeholder="Partenza" @bind="percorso.Partenza" />
        <input type="text" placeholder="Arrivo" @bind="percorso.Arrivo" />
    </div>
}
    <button @onclick="@(() => Percorsi.Add(new Percorso()))" class="add-button">+</button>

</div>

<style>
    .add-button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

    .percorso{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin: 10px;
    }
    .container{
        display: flex;
        flex-direction: column;
        Width:20%;
        margin-left:0;
    }

</style>
@code
{
    List<Percorso> Percorsi { get; set; }= [new Percorso(string.Empty,string.Empty)];

    public class Percorso(string partenza = "", string arrivo = "")
    {
        public string Partenza { get; set; } = partenza;
        public string Arrivo { get; set; } = arrivo;
    }
}
